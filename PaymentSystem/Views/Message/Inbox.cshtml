@using PaymentSystem.Util
@model IEnumerable<DAO.Model.Message>

@{
    ViewBag.Title = "Входящие";
}

<div class="col-md-12">
    <h2>@ViewBag.Title</h2>
    @Html.CreateBootstrapTable(Url.Action("Inbox", "Json"),
    new List<ColumnItem>
    {
        new ColumnItem("From", Html.DisplayNameFor(model => model.From)),
        new ColumnItem("Theme", Html.DisplayNameFor(model => model.Theme)),
        new ColumnItem("Date", Html.DisplayNameFor(model => model.Date)),
    }, Url.Action("Details", "Message"))
</div>
