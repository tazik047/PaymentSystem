@using DAO.Model
@model DAO.Model.BankOperation

@{
    ViewBag.Title = "Банковская операция";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OperationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OperationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount) грн.
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ResipientNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ResipientNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BancCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BancCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SortCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SortCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
    @if (Model.Type == OperationType.PreparedPayment)
    {
        <button class="btn btn-default btn-block btn-success" id="op-accept">Подвтредить</button>
        <button class="btn btn-default btn-block btn-danger" id="op-cancel">Отменить</button>
        @section scripts{
            <script>
                $(document).ready(function () {
                    $('#op-accept').click(function () {
                        changeOperation("подтвердить", "@Url.Action("Accept",new{Controller = "Operation", id = Model.OperationId})");
                    });
                    $('#op-cancel').click(function () {
                        changeOperation("отменить", "@Url.Action("Cancel",new{Controller = "Operation", id = Model.OperationId})");
                    });
                });
            </script>
        }
    }
</div>
